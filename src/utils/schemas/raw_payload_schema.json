{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "time": {
      "type": [
        "string",
        "integer"
      ],
      "format": "date-time"
    },
    "message_type": {
      "type": "string",
      "enum": [
        "raw"
      ]
    },
    "device": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "device_type": {
          "type": "string",
          "enum": [
            "handy",
            "UAV"
          ]
        }
      },
      "required": [
        "id",
        "device_type"
      ]
    },
    "longitude": {
      "type": "string"
    },
    "latitude": {
      "type": "string"
    },
    "payload": {
      "type": "object"
    }
  },
  "required": [
    "time",
    "device",
    "longitude",
    "latitude",
    "payload",
    "message_type"
  ]
}